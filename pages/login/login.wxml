<!--index.wxml-->

<cu-custom bgColor="bg-gradual-blue">
	<view slot="content">登录</view>
</cu-custom>
<van-cell-group>
	<van-field value="{{ username }}" required clearable label="用户名" icon="question-o" placeholder="请输入用户名" bind:click-icon="onClickIcon" />

	<van-field value="{{ password }}" type="password" label="密码" placeholder="请输入密码" required clearable border="{{ false }}" />
</van-cell-group>

<van-button size="large" type="primary" custom-class="bg-gradual-blue top20">登录</van-button>

